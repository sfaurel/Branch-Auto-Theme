{
  "name": "branch-auto-theme",
  "displayName": "BranchAutoTheme",
  "description": "BranchAutoTheme is a Visual Studio Code extension created to automatically adjust your editor's theme based on the active Git branch.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Visualization"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "icon": ".assets/logo.png",
  "contributes": {
    "commands": [
      {
        "command": "branch-auto-theme.activate",
        "title": "Activate",
        "category": "Branch Auto Theme"
      },
      {
        "command": "branch-auto-theme.deactivate",
        "title": "Deactivate",
        "category": "Branch Auto Theme"
      }
    ],
    "configuration": {
      "properties": {
        "branchAutoTheme.branchMappings": {
          "type": "object",
          "properties": {
            "protected": {
              "type": "string",
              "default": "main, master"
            },
            "develop": {
              "type": "string",
              "default": "develop"
            },
            "feature": {
              "type": "string",
              "default": "feature/*"
            }
          },
          "additionalProperties": false,
          "default": {
						"protected": "main, master",
						"develop": "develop",
						"feature": "feature/*"
					},
          "markdownDescription": "Map a list of comma-separated branch names or patterns."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
